<h1>Listing actividads</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Responsable</th>
    <th>Avance</th>
    <th>Fecha inicio</th>
    <th>Fecha termino</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @actividads.each do |actividad| %>
  <tr>
    <td><%= actividad.nombre %></td>
    <td><%= actividad.responsable %></td>
    <td><%= actividad.avance %></td>
    <td><%= actividad.fecha_inicio %></td>
    <td><%= actividad.fecha_termino %></td>
    <td><%= link_to 'Show', actividad %></td>
    <td><%= link_to 'Edit', edit_actividad_path(actividad) %></td>
    <td><%= link_to 'Destroy', actividad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

